# Database configuration
DB_ROOT_PASSWORD=change_this_root_password
DB_PASSWORD=change_this_password
DATABASE_URL=mysql+pymysql://flypush:change_this_password@db/flypush

# Application settings
APP_NAME=flyRoom
SECRET_KEY=change_this_to_a_random_secret_key_at_least_32_chars
DEBUG=true

# JWT settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# For local development without Docker
# DATABASE_URL=mysql+pymysql://flystocks:password@localhost:3306/flystocks

# SMTP settings for email notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=flyRoom  # Should match APP_NAME
SMTP_USE_TLS=true

# Super Admin Console
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2b$12$CHANGE_THIS_TO_A_BCRYPT_HASH
ADMIN_SECRET_KEY=change_this_to_a_random_secret_key
APP_BASE_URL=https://app.flyroom.net

# LLM settings (OpenRouter)
LLM_API_KEY=your-openrouter-api-key
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_DEFAULT_MODEL=anthropic/claude-sonnet-4

# Paddle billing
PADDLE_API_KEY=your-paddle-api-key
PADDLE_ENVIRONMENT=sandbox
PADDLE_CLIENT_TOKEN=your-paddle-client-token
PADDLE_WEBHOOK_SECRET=your-paddle-webhook-secret
PADDLE_PRICE_ID_LITE=your-paddle-lite-price-id
PADDLE_PRICE_ID_PRO=your-paddle-pro-price-id

# Backup (Garage S3)
R2_ENDPOINT_URL=http://<garage-ip>:3900
R2_ACCESS_KEY_ID=your-garage-access-key-id
R2_SECRET_ACCESS_KEY=your-garage-secret-key
R2_BUCKET_NAME=flyroom-storage
BACKUP_RETENTION_DAYS=30
BACKUP_CRON_SECRET=change_this_to_a_random_secret
BACKUP_ENCRYPTION_KEY=  # Generate with: python -c "import secrets,base64; print(base64.urlsafe_b64encode(secrets.token_bytes(32)).decode())"
