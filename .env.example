# Database configuration
DB_ROOT_PASSWORD=change_this_root_password
DB_PASSWORD=change_this_password
DATABASE_URL=mysql+pymysql://flypush:change_this_password@db/flypush

# Application settings
APP_NAME=flyPush
SECRET_KEY=change_this_to_a_random_secret_key_at_least_32_chars
DEBUG=true

# JWT settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# For local development without Docker
# DATABASE_URL=mysql+pymysql://flystocks:password@localhost:3306/flystocks

# SMTP settings for email notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=flyPush  # Should match APP_NAME
SMTP_USE_TLS=true

# LLM settings (OpenRouter)
LLM_API_KEY=your-openrouter-api-key
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_DEFAULT_MODEL=anthropic/claude-sonnet-4
